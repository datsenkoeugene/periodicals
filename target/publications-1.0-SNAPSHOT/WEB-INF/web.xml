<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.eugenedatsenko.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>listUsers lockUnlockUser insertPagePublication insertPublication deletePublication
                editPublication updatePublication listPeriodicals listPeriodicals sortByName searchByName
            </param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>listPeriodicals sortByName searchByName userAccount updateAccountPage updateAccount
                userPeriodicals
            </param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>logout</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login register language</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
</web-app>